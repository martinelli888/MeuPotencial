<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bg_resultado"
    android:layout_weight="1"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/resultadoTextoA"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:text="@string/Resultado_mensagem1"
            android:textColor="@color/cor01"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/resultadoTextoB"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Resultado_mensagem2"
            android:textSize="18sp"
            android:textColor="@color/cor01"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/resultadoTextoA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/resultadoTextoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/Resultado_mensagem3"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/cor03"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/resultadoTextoB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="@string/resultadoFinal"
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:clickable="true"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/resultadoTextoD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/Resultado_mensagem4"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/cor03"
            android:layout_above="@+id/resultado"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/resultadoTextoE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/Resultado_mensagem6"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/cor03"
            android:layout_below="@+id/resultado"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/resultadoTextoF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/Resultado_mensagem7"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/cor01"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/voltar"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/Propaganda_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            ads:adSize="BANNER"
            ads:adUnitId="@string/Id_propaganda_8"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/voltar"
            android:layout_width="wrap_content"
            android:layout_above="@id/Propaganda_8"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="proximo"
            android:text="Voltar"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/Depositar"
            android:layout_above="@id/Propaganda_8"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@color/colorPrimary"
            android:onClick="Depositar"
            android:text="@string/B_Salvar"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/voltar">
        </Button>
        <Button
            android:id="@+id/recomecar"
            android:layout_above="@id/Propaganda_8"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@color/colorPrimary"
            android:onClick="proximo"
            android:text="Recomecar"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/voltar">
        </Button>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/contorno_porcentagem"
            android:id="@+id/circulo"
            android:orientation="vertical"
            tools:gravity="center"
            android:gravity="center"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:baselineAligned="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
